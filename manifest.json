{
    "manifest_version": 3,
    "name": "Genshin Character Search Overlay",
    "version": "0.0.1",
    "description": "Created an underlay of your favourite genshin impact character on your Homepage!",
    "permissions": ["scripting", "activeTab", "tabs", "storage"],

    "action": {
      "default_popup": "popup.html"
    },

    
    "icons": {
        "16": "/GenshinExtensionSprites/16.png",
        "32": "/GenshinExtensionSprites/32.png",
        "48": "/GenshinExtensionSprites/48.png",
        "128": "/GenshinExtensionSprites/128.png"
      },

    
    "content_scripts": [
        {
          "js": [
            "scripts/popup.js",
            "scripts/content.js"
          ],
          "matches": [
            "https://www.google.com/search?"
          ],
          "css": ["popup.css"],
          "run_at": "document_end",
          "persistent": true
        }
      ],

      "commands": {
        "_execute_action": {
          "suggested_key": {
            "default": "Ctrl+J",
            "mac": "Command+J"
          }
        }
      }

  }