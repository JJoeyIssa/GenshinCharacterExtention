{
    "manifest_version": 2,
    "name": "Genshin Character Mouse Tag",
    "version": "1.0",
    "description": "WIP: Let's your favourite genshin character follow your mouse!",
    "permissions": ["activeTab"],

    "action": {
      "default_popup": "popup.html"
    },

    
    "icons": {
        "16": "/GenshinExtensionSprites/16.png",
        "32": "/GenshinExtensionSprites/32.png",
        "48": "/GenshinExtensionSprites/48.png",
        "128": "/GenshinExtensionSprites/128.png"
      },

    "content_scripts": [
        {
          "js": [
            "scripts/content.js",
            "scripts/background.js",
            "scripts/popup.js"
          ],
          "matches": [
            "<all_urls>"
          ],
          "css": ["popup.css"]
        }
      ],

      "commands": {
        "_execute_action": {
          "suggested_key": {
            "default": "Ctrl+J",
            "mac": "Command+J"
          }
        }
      }

  }