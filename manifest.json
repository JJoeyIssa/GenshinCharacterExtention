{
    "manifest_version": 3,
    "name": "Genshin Character Mouse Tag",
    "version": "0.0.1",
    "description": "WIP: Let's your favourite genshin character follow your mouse!",
    "permissions": ["scripting", "activeTab"],

    "action": {
      "default_popup": "popup.html"
    },

    
    "icons": {
        "16": "/GenshinExtensionSprites/16.png",
        "32": "/GenshinExtensionSprites/32.png",
        "48": "/GenshinExtensionSprites/48.png",
        "128": "/GenshinExtensionSprites/128.png"
      },

    
    "content_scripts": [
        {
          "js": [
            "scripts/popup.js",
            "scripts/inject.js",
            "scripts/content.js"
          ],
          "matches": [
            "<all_urls>"
          ],
          "css": ["popup.css"],
          "run_at": "document_end",
          "persistent": true
        }
      ],

      "commands": {
        "_execute_action": {
          "suggested_key": {
            "default": "Ctrl+J",
            "mac": "Command+J"
          }
        }
      }

  }